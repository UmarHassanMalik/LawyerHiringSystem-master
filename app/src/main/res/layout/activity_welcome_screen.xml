<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#ffffff"
tools:context=".WelcomeScreen">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:layout_centerInParent="true"
    android:background="#1976D1">
    <Button
        android:padding="20dp"
        android:layout_weight="1"
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="LOGIN"
        android:textColor="#ffffff"
        android:background="@drawable/welcome_btn"/>
    <Button
        android:padding="20dp"
        android:layout_weight="1"
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="SIGNUP"
        android:textColor="#ffffff"
        android:background="@drawable/welcome_btn"/>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/legall_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lawyer Hiring \n System"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50sp"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textColor="#c0c0c0"
        android:text="Welcome to Lawyer Hiring System, platform for lawyers to offer their expertise and get hired remotely, by directly communicating with clients. "
        android:typeface="sans"
        android:gravity="center"
        android:layout_margin="30dp"/>
    <TextView
        android:id="@+id/getstarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:text="Get Started !"
        android:layout_marginBottom="40dp"/>
</LinearLayout>


</RelativeLayout>
